{
    "manifest_version": 3,
    "name": "iVault Extension",
    "version": "1.0",
    "description": "Password management extension for iVault.",
    "permissions": [
        "storage", 
        "activeTab", 
        "webRequest", 
        "webNavigation"
    ],
    "host_permissions": [
        "http://localhost/*" 
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icons16.png",
            "48": "icons/icons48.png",
            "128": "icons/icons128.png"
        }
    },
    "icons": {
        "16": "icons/icons16.png",
        "48": "icons/icons48.png",
        "128": "icons/icons128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}
